<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="group"
            type="com.xtensolutions.multyviewtyperecyclerview.room.entity.Group" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/rvGroupName"
            style="@style/App.Theme.TextAppearance.Large.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/card_padding"
            android:paddingVertical="@dimen/list_item_margin"
            android:text="@{group.groupName}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Group A" />


        <TextView
            android:id="@+id/tvTeamHeading"
            style="@style/App.Theme.TextAppearance.Medium.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/card_padding"
            android:text="Team"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvPlayedMatchedHeading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvGroupName"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            android:id="@+id/tvPlayedMatchedHeading"
            style="@style/App.Theme.TextAppearance.Medium.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="M"
            app:layout_constraintBottom_toBottomOf="@id/tvTeamHeading"
            app:layout_constraintEnd_toStartOf="@id/tvWinsHeading"
            app:layout_constraintStart_toEndOf="@id/tvTeamHeading"
            app:layout_constraintTop_toTopOf="@id/tvTeamHeading"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/tvWinsHeading"
            style="@style/App.Theme.TextAppearance.Medium.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="W"
            app:layout_constraintBottom_toBottomOf="@id/tvTeamHeading"
            app:layout_constraintEnd_toStartOf="@id/tvLossesHeading"
            app:layout_constraintStart_toEndOf="@id/tvPlayedMatchedHeading"
            app:layout_constraintTop_toTopOf="@id/tvTeamHeading"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/tvLossesHeading"
            style="@style/App.Theme.TextAppearance.Medium.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="L"
            app:layout_constraintBottom_toBottomOf="@id/tvTeamHeading"
            app:layout_constraintEnd_toStartOf="@id/tvPointsHeading"
            app:layout_constraintStart_toEndOf="@id/tvWinsHeading"
            app:layout_constraintTop_toTopOf="@id/tvTeamHeading"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/tvPointsHeading"
            style="@style/App.Theme.TextAppearance.Medium.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pts"
            app:layout_constraintBottom_toBottomOf="@id/tvTeamHeading"
            app:layout_constraintEnd_toStartOf="@id/tvNrrHeading"
            app:layout_constraintStart_toEndOf="@id/tvLossesHeading"
            app:layout_constraintTop_toTopOf="@id/tvTeamHeading"
            app:layout_constraintWidth_percent="0.1" />

        <TextView
            android:id="@+id/tvNrrHeading"
            style="@style/App.Theme.TextAppearance.Medium.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NRR"
            app:layout_constraintBottom_toBottomOf="@id/tvTeamHeading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvPointsHeading"
            app:layout_constraintTop_toTopOf="@id/tvTeamHeading"
            app:layout_constraintWidth_percent="0.2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
